<div class="nested-form-wrapper" data-new-record="<%= f.object.new_record? %>">
  <%= f.select :user_id, User.all.map { |user| [user.username, user.id] }, { include_blank: true }, class: "select" %>
  <button type="button" data-action="nested-form#remove" class="btn m-2">削除</button>

  <%= f.hidden_field :_destroy %>
</div>