<div class="page_margin">
  <h2 class="page_title">参加者一覧</h2>

  <%= render partial: 'attendees/update_attend_status' %>
  <% if @attendees.empty? %>
    <p>参加予定者はいません。</p>
  <% else %>
    <p class="my-4">
      参加予定者数：<%= @attendees.count %>名
    </p>
    <%= render partial: 'attendees', locals: { attendees: @attendees } %>
  <% end %>
</div>